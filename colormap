function __cmap1a()
{
	xxx=0
	echo -e "\n\nÔº¢ÔΩÅÔΩìÔΩâÔΩÉ ÔΩÉÔΩèÔΩåÔΩèÔΩíÔΩìÔºö\n"
	while [ "$xxx" -lt 17 ]; do
		while [ "$xxx" -lt 10 ]; do
			while [ "$xxx" -lt 8 ]; do
				echo -en "[38;5;15m "$xxx":[48;5;"$xxx"m    [m "
				((xxx +=1))
			done
			echo -e "BOLD / BRIGHT"
			echo -en "[38;5;15m "$xxx":[48;5;"$xxx"m    [m "
			((xxx +=1))
		done
		echo -en "[38;5;15m"$xxx":[48;5;"$xxx"m    [m "
		((xxx +=1))
	done
	echo -e "NORMAL"
}


#echo

function __cmap2()
{
echo -e "\n\n\033[01mÔº•ÔΩòÔΩîÔΩíÔΩÅ ÔΩÉÔΩèÔΩåÔΩèÔΩíÔΩì Ôºö\033[m\n"
xxx=16
while [ $xxx -lt 231 ]; do
	while [ $xxx -lt 100 ]; do
		echo -en "[38;5;15m "$xxx": [48;5;"$xxx"m      [m  "
		((xxx +=1))
		echo -en "[38;5;15m "$xxx": [48;5;"$xxx"m      [m  "
		((xxx +=1))
		echo -en "[38;5;15m "$xxx": [48;5;"$xxx"m      [m  "
		((xxx +=1))
		echo -en "[38;5;15m "$xxx": [48;5;"$xxx"m      [m  "
		((xxx +=1))
		echo -en "[38;5;15m "$xxx": [48;5;"$xxx"m      [m  "
		((xxx +=1))
		echo -e "[38;5;15m "$xxx": [48;5;"$xxx"m      [m  "
		((xxx +=1))
	done
	echo -en "[38;5;15m"$xxx": [48;5;"$xxx"m      [m  "
	((xxx +=1))
	echo -en "[38;5;15m"$xxx": [48;5;"$xxx"m      [m  "
	((xxx +=1))
	echo -en "[38;5;15m"$xxx": [48;5;"$xxx"m      [m  "
	((xxx +=1))
	echo -en "[38;5;15m"$xxx": [48;5;"$xxx"m      [m  "
	((xxx +=1))
	echo -en "[38;5;15m"$xxx": [48;5;"$xxx"m      [m  "
	((xxx +=1))
	echo -e "[38;5;15m"$xxx": [48;5;"$xxx"m      [m  "
	((xxx +=1))
done
}

function __cmap3v(){
xxx=232
echo -e """\n\n\033[01mÔº≥ÔΩàÔΩÅÔΩÑÔΩÖÔΩì  ÔΩèÔΩÜ  ÔΩáÔΩíÔΩÖÔΩô (ÔΩñÔΩÖÔΩíÔΩîÔΩâÔΩÉÔΩÅÔΩå):\033[m
Note: \033[3mThe verticle version of this table is being
      displayed because the terminal is not wide
      enough to display the horizontal table prop-
      erly. To show the Horizontal table, increase
      the terminal's width to 96 cols or more.\033[m
"""

while [ $xxx -lt 256 ]; do
		echo -e "[38;5;15m "$xxx"   [48;5;"$xxx"m     [m  "
		((xxx +=1))
done

}

function __cmap3h(){
echo -e "\n\n\033[01mÔº≥ÔΩàÔΩÅÔΩÑÔΩÖÔΩì  ÔΩèÔΩÜ  ÔΩáÔΩíÔΩÖÔΩô (ÔΩàÔΩèÔΩíÔΩâÔΩöÔΩèÔΩéÔΩîÔΩÅÔΩå)Ôºö\033[m\n"
if [ $COLUMNS -gt 95 ]; then
	h3count=232
	echo 2{32..55}
	while [ $h3count -lt 256 ]; do
		echo -en "\e[48;5;"$h3count"m   \e[m"
		echo -en " "
		h3count=$((h3count + 1))
	done
	echo -e "\n\n"
fi
}
