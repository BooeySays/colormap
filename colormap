function __cmap(){
	__cmapall | less -r
}

function __cmapall(){
	__cmap1
	__cmap2
	if [ "$COLUMNS" -gt "95" ]; then
		__cmap3h
	else
		__cmap3v
	fi
}


function shades_grey(){
	g=232
	while [ $g -lt 256 ]; do
		echo -en "\033[38;5;15m\033[48;5;"$g"m "$g" \033[m\t"
		((g +=1))
		echo -en "\033[38;5;15m\033[48;5;"$g"m "$g" \033[m\t"
		((g +=1))
		echo -en "\033[38;5;15m\033[48;5;"$g"m "$g" \033[m\t"
		((g +=1))
		echo -e "\033[38;5;15m\033[48;5;"$g"m "$g" \033[m\t"
		((g +=1))
	done
}
